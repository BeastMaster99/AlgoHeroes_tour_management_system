<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addTouristAttraction">

    <include
        android:id="@+id/include"
        layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_marginTop="18dp"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp">

            <EditText
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/inputField_color"
                android:gravity="center"
                android:hint="@string/name"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/edit_text_color"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck"
                android:importantForAutofill="no"
                android:fontFamily="@font/font4"/>

            <EditText
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/inputField_color"
                android:gravity="center"
                android:hint="@string/address"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck"
                android:importantForAutofill="no"
                android:fontFamily="@font/font4"/>

            <EditText
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/inputField_color"
                android:gravity="center_horizontal"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:minLines="12"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck,TextContrastCheck"
                android:importantForAutofill="no"
                android:fontFamily="@font/font4"/>

            <EditText
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView19"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/inputField_color"
                android:fontFamily="@font/font4"
                android:gravity="center"
                android:hint="@string/city"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="11dp"
                android:text="@string/select_images"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/inputField_color"
                android:fontFamily="@font/font4"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button6"
                android:text="@string/choose_up_to_5_images"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font4"/>


            <LinearLayout
                android:id="@+id/placeImgContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView20"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/placeImg1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/hotel_img1_desc"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/placeImg2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="7dp"
                android:contentDescription="@string/hotel_img2_desc"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/placeImg3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="7dp"
                android:contentDescription="@string/hotel_img3_desc"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/placeImg4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="7dp"
                android:contentDescription="@string/hotel_img4_desc"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/placeImg5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="7dp"
                android:contentDescription="@string/hotel_img5_desc"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:visibility="gone" />


        </LinearLayout>

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeImgContainer"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/font4"
                android:gravity="center"
                android:padding="7dp"
                android:text="@string/add_tourist_attraction"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:backgroundTint="@color/theme_color" />



        </RelativeLayout>


    </ScrollView>
    <RelativeLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hotelUploadProgress"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="24sp"
            android:textStyle="bold"/>


    </RelativeLayout>

</RelativeLayout>
